// Schéma Prisma pour le salon de coiffure
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses a direct connection
}

// Table des utilisateurs admin
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash bcrypt
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Table des clients
model Client {
  id          String    @id @default(uuid())
  name        String
  email       String?
  phone       String    @unique
  createdAt   DateTime  @default(now())
  bookings    Booking[]
}

// Table des prestations
model Service {
  id          String    @id @default(uuid())
  name        String
  description String
  price       Float
  duration    Int       // en minutes
  isActive    Boolean   @default(true)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

// Table des réservations
model Booking {
  id          String   @id @default(uuid())
  clientId    String
  serviceId   String
  date        DateTime // Date et heure du rendez-vous
  endTime     DateTime // Calculé automatiquement
  status      String   @default("confirmed") // confirmed, cancelled, completed
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  service     Service  @relation(fields: [serviceId], references: [id])
  
  @@index([date])
  @@index([clientId])
}

// Table des produits
model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Table de la galerie
model GalleryImage {
  id          String   @id @default(uuid())
  url         String
  title       String?
  description String?
  category    String?  // haircut, beard, product, etc.
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

// Table des horaires d'ouverture
model BusinessHours {
  id          String   @id @default(uuid())
  dayOfWeek   Int      // 0 = Dimanche, 1 = Lundi, ..., 6 = Samedi
  openTime    String   // Format "HH:mm"
  closeTime   String   // Format "HH:mm"
  isOpen      Boolean  @default(true)
  
  @@unique([dayOfWeek])
}

// Table des jours fermés (congés, jours fériés)
model ClosedDay {
  id          String   @id @default(uuid())
  date        DateTime @unique
  reason      String?
  createdAt   DateTime @default(now())
}

// Table des avis clients
model Review {
  id          String   @id @default(uuid())
  name        String
  rating      Int      // 1 à 5
  comment     String   @db.Text
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
